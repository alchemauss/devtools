{
	"printWidth": 100,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": true,
	"overrides": [
		{
			"files": ["*.svelte"],
			"options": {
				"svelteSortOrder": "scripts-markup-styles-options",
				"svelteStrictMode": false,
				"svelteBracketNewLine": false,
				"svelteAllowShorthand": true,
				"svelteIndentScriptAndStyle": true
			}
		},
		{
			"files": ["README.md", "package.json"],
			"options": { "useTabs": false }
		}
	]
}
